# For general use (Session pooler - port 5432)
DATABASE_URL="postgresql://postgres.[project-ref]:[db-password]@aws-0-[aws-region].pooler.supabase.com:5432/postgres?schema=public"
# For migrations (Direct connection - port 5432)
DIRECT_URL="postgresql://postgres.[project-ref]:[db-password]@aws-0-[aws-region].pooler.supabase.com:5432/postgres?schema=public"
# For serverless/edge (Transaction pooler - port 6543)
# DATABASE_URL="postgresql://postgres.[project-ref]:[db-password]@aws-0-[aws-region].pooler.supabase.com:6543/postgres?schema=public&pgbouncer=true"

# Authentication (Supabase)
NEXT_PUBLIC_SUPABASE_URL="https://your-project.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key"

# Security
INTERNAL_API_SECRET="generate-a-32-character-random-string-here-minimum"

# Rate Limiting (Upstash Redis) - Optional for development
UPSTASH_REDIS_REST_URL="https://your-redis-url.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your-token"

# Payments (Stripe)
STRIPE_SECRET_KEY="sk_test_..."
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY="pk_test_..."
STRIPE_WEBHOOK_SECRET="whsec_..."

# Email (Resend)
RESEND_API_KEY="re_..."

# Monitoring (Sentry)
SENTRY_DSN="https://..."
NEXT_PUBLIC_SENTRY_DSN="https://..."

# Analytics (PostHog)
NEXT_PUBLIC_POSTHOG_KEY="phc_..."
